// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Utilise la variable d'env présente sur Vercel/Neon
  // (si tu préfères POSTGRES_PRISMA_URL, remplace par env("POSTGRES_PRISMA_URL")).
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  role          String    @default("INDIVIDUAL")
  emailVerified DateTime?                       // ← ajouté pour marquer l'email vérifié
  createdAt     DateTime  @default(now()) @map("createdat")
  updatedAt     DateTime  @updatedAt      @map("updatedat")

  @@map("User")
}

model VerificationToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  type      String
  expiresAt DateTime @map("expires_at")
  ip        String?
  createdAt DateTime @default(now()) @map("created_at")

  @@index([email])
  @@index([type])
  @@index([expiresAt])

  @@map("VerificationToken")
}
