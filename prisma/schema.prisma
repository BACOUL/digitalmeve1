// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Utilise l’URL Prisma fournie par Neon dans Vercel (POSTGRES_PRISMA_URL)
  url      = env("POSTGRES_PRISMA_URL")
}

// Table User
// - createdAt/updatedAt mappés sur createdat/updatedat
// - role est du texte (INDIVIDUAL | BUSINESS)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("INDIVIDUAL")
  createdAt DateTime @default(now()) @map("createdat")
  updatedAt DateTime @updatedAt @map("updatedat")

  @@map("User")
}

// Table VerificationToken
// - stocke les tokens de vérification email
// - index pour email, type et expiration
model VerificationToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  type      String   // ex: "email_verification"
  expiresAt DateTime @map("expires_at")
  ip        String?
  createdAt DateTime @default(now()) @map("created_at")

  @@index([email])
  @@index([type])
  @@index([expiresAt])

  @@map("VerificationToken")
}
