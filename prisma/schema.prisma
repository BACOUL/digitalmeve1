// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// IMPORTANT : correspond exactement à ta table "User"
// - createdAt/updatedAt sont mappés à createdat/updatedat
// - role est du texte (INDIVIDUAL | BUSINESS) avec un CHECK en base
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("INDIVIDUAL")
  createdAt DateTime @default(now()) @map("createdat")
  updatedAt DateTime @default(now()) @updatedAt @map("updatedat")

  @@map("User")
}
