{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://digitalmeve.com/schemas/meve-1.schema.json",
  "title": "MEVE Proof v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "created_at", "doc", "issuer"],
  "properties": {
    "version": { "type": "string", "const": "meve/1" },
    "created_at": { "type": "string", "format": "date-time" },
    "doc": {
      "type": "object",
      "additionalProperties": false,
      "required": ["size", "sha256"],
      "properties": {
        "name": { "type": "string" },
        "mime": { "type": "string" },
        "size": { "type": "integer", "minimum": 0 },
        "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "preview_b64": { "type": "string" }
      }
    },
    "issuer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "name": { "type": "string" },
        "identity": { "type": "string" },
        "type": { "type": "string", "enum": ["personal", "pro", "official"] },
        "website": { "type": "string", "format": "uri" },
        "verified_domain": { "type": "boolean" }
      }
    },
    "meta": { "type": "object", "additionalProperties": true }
  }
}
